@page "{id}"
@model ImmersionHelper.Pages.Vocabularies.DetailsModel
@{
    
}

<div class="container">
    <div>
        <h4>Front:</h4>
        <input asp-for="UserVocab.Front" class="form-control" readonly />
    </div>

    <div class="row">
        <h4>Back:</h4>
        <div>
            <textarea asp-for="@Model.UserVocab.Back" class="form-control" rows="6" readonly></textarea>
        </div>
    </div>

    <div>
        <h4>Hint:</h4>
        <input asp-for="UserVocab.Hint" class="form-control" readonly />
    </div>

    <div>
        <h4>Review Date:</h4>
        <p>@Model.UserVocab.ReviewDate</p>
    </div>

    <div class="row">
        <div class="col-md-1">
            <a asp-page="Edit" asp-route-id="@Model.UserVocab.VocabularyId" class="btn btn-primary">Edit</a>
        </div>
        <div class="col-md-1">
            <form asp-page="Delete" asp-route-id="@Model.UserVocab.VocabularyId" method="post" onsubmit="return confirm('Are you sure you want to delete this vocabulary item?');">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
    <div class="row mt-1">
        <div class="col-md-12">
            <a asp-page="Index">Back to List</a>
        </div>
    </div>
    
</div>